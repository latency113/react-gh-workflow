name: Deploy React Nattapong
on:
  push:
    branches:
      - master
  workflow_dispatch:
  pull_request:
    types:
      - opened
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Clone repo
        uses: actions/checkout@v5
      - name: Install and Cache
        uses: ./.github/actions/install-cache
      - name: Build
        run: bun run build
      - name: List dist/
        run: ls dist
      - name: Upload dist
        uses: actions/upload-artifact@v4
        with:
          name: dist-folder
          path: dist/
  deploy:
    if: success()
    needs:
      - build
    runs-on: ubuntu-latest
    steps:
      - name: Download-dist
        uses: actions/download-artifact@v4
        with:
          name: dist-folder
          path: dist
      - name: Deploy
        run: echo "deployyyyyyyy"
  notify-success:
      runs-on: ubuntu-latest
      needs: 
        - build
        - deploy
      if: success()
      steps:
        - name: notify discord
          env:
            DISCORD_WEBHOOK: https://discord.com/api/webhooks/1421697869458706533/W2UqZa7gD95EU7ixa4gQN3QLz3pWc3oFepvpv16XWxfpuMMTTiqbNULZWrBBmPfPlYBY
          uses: Ilshidur/action-discord@master
          with:
            args: "# Build success by khan ai"

  notify-failed:
      runs-on: ubuntu-latest
      needs: 
        - build
        - deploy
      if: failure()
      steps:
        - name: notify discord
          env:
            DISCORD_WEBHOOK: https://discord.com/api/webhooks/1421697869458706533/W2UqZa7gD95EU7ixa4gQN3QLz3pWc3oFepvpv16XWxfpuMMTTiqbNULZWrBBmPfPlYBY
          uses: Ilshidur/action-discord@master
          with:
            args: "# Build failed by khan ai"


      
